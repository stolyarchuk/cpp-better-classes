{
	"name": "cpp-new-class",
	"displayName": "C++ New Class",
	"description": "Yet another C++ class files generator",
	"version": "0.23.2",
	"publisher": "stolyarchuk",
	"icon": "icon/logo.png",
	"repository": {
		"url": "https://github.com/stolyarchuk/cpp-new-class.git"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cpp-new-class.newClass"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cpp-new-class.newClass",
				"title": "C/C++: Create New Class..."
			}
		],
		"menus": {
			"explorer/context": [
				{
					"group": "navigation@-1",
					"command": "cpp-new-class.newClass"
				}
			]
		},
		"keybindings": [
			{
				"command": "cpp-new-class.newClass",
				"key": "ctrl+k n",
				"when": "editorTextFocus"
			}
		],
		"languages": [
			{
				"id": "cpp",
				"extensions": [
					".cpp",
					".cc",
					".hpp",
					".h"
				]
			}
		],
		"configuration": [
			{
				"title": "C++ New Class",
				"properties": {
					"cpp.newclass.cppExtension": {
						"type": "string",
						"default": "cc",
						"description": "C++ source file extension (.cc)"
					},
					"cpp.newclass.hppExtension": {
						"type": "string",
						"default": "h",
						"description": "C++ header file extension (.h)"
					},
					"cpp.newclass.useIfndef": {
						"type": "boolean",
						"default": true,
						"description": "Use #ifndef for header guard. Use #pragma once otherwise."
					},
					"cpp.newclass.lowerCaseNamespace": {
						"type": "boolean",
						"default": true,
						"description": "Transform namespace names to lower case."
					},
					"cpp.newclass.snakeCaseFilename": {
						"type": "boolean",
						"default": true,
						"description": "Transform filenames to snake case."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"watch": "tsc -watch -p ./",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"esbuild": "^0.12.26",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
